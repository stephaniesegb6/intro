	<style>
		*{
			margin: 0;
		}
		body{
			width: 100%;
			height: 100vh;
			font-size: 20px;
			background-color: rgb(187, 187, 245);
		}
		.tirtle{
			margin: 10px;
			text-align: center;
			font-family: sans-serif;
			color: white;
		}
		nav{
			width: 100%;
			display: flex;
			font-family: sans-serif;
			font-weight: bold;
			margin-bottom: 10px;
		}
		.nav-links{
			flex: 1;
			text-align: left;
			border-top: 4px solid white;
			border-bottom: 4px solid white;
			margin-left: 7px;
			margin-right: 7px;
		}
		.nav-links ul{
			width: 100%;
			padding-left: 0;
		}
		.nav-links ul li{
			width: 22%;
			list-style: none;
			display: inline-block;
			padding: 8px 12px;
			position: relative;
			text-align: center;
			font-size: 25px;
		}
		.nav-links ul li::after{
			content: '';
			width: 0%;
			height: 2px;
			background-color: wheat;
			display: block;
			margin: auto;
			transition: 0.5s;
		}
		.nav-links ul li:hover::after{
			width: 100%;
		}
		.nav-links ul li a{
			color: white;
			text-decoration: none;
		}
		.span-links{
			color: white;
			font-size: 18px;
		}
		span .fa{
			display: none;
		}
		nav .fa{
			display: none;
		}
		@media(max-width: 1218px){
			.nav-links{
				position: absolute;
				border-top: 0;
				border-bottom: 0;
				background-color: whitesmoke;
				height: 100vh;
				width: 200px;
				top: 0;
				left: -200px;
				text-align: left;
				z-index: 2;
				margin-left: 0;
				transition: 0.5s;
			}
			.nav-links ul li{
				width: 22%;
				list-style: none;
				display: block;
				padding: 8px 12px;
				position: relative;
				text-align: center;
				font-size: 20px;

			}
			.nav-links ul li a{
				color: rgb(187, 187, 245);;
			}
			.span-links{
				display: none;
			}
			nav .fa{
				display: block;
				color: black;
				margin: 10px;
				font-size: 20px;
				
			}
			span .fa{
				display: block;
				color: white;
				margin-left: 10px;
				margin-top: 10px;
				font-size: 25px;
				
			}
			.nav-links ul{

			}
		}
		.container{
			margin-left: 10px;
			margin-bottom: 10px;
		}
		.para{
			margin-bottom: 5px;
		}
		.list {
			font-weight: bold;
			color: oldlace;
			font-size: 25px;
		}
		table, th, td{
            border: 1px solid red;
            padding: 3px;
            text-align: center;
			border-collapse: collapse;
        }
		table{
			margin-bottom: 10px;
		}
		.app{
			color: oldlace;
		}
		.plot{
			margin-left: 10px;
		}
